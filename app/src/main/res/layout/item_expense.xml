<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_margin="7dp"
        android:padding="5dp"
        android:text="10 Aug 2018"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date">

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="24dp"
            android:text="General"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp" />

        <TextView
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_name"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:maxLines="2"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_marginLeft="11dp"
            android:text="TextView ckljdudsf vijudeisjusd dskljdsflyudfjs sdklgf" />

        <TextView
            android:id="@+id/amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/category_name"
            android:layout_marginEnd="38dp"
            android:text="236784.34"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp" />

        <TextView
            android:id="@+id/value_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:text="INR" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="3dp"
        android:background="@color/today_card_color"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true">

    </View>
</RelativeLayout>